<%@ Master Language="C#" AutoEventWireup="true" CodeBehind="masterPage.master.cs" Inherits="E_Handelssite.masterPage" %>

<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">

<head runat="server">
    <title></title>
    <asp:ContentPlaceHolder ID="head" runat="server">
    </asp:ContentPlaceHolder>
    <link href="Content/bootstrap.css" rel="stylesheet" />
    <script src="Scripts/jquery-2.2.0.js"></script>
    <script src="Scripts/bootstrap.js"></script>
    <style>
        #left_div {
            /*background-color:grey;*/
            width: 15%;
            float: left;
            height: 800px;
        }

        #right_div {
            width: 15%;
            /*background-color:grey;*/
            float: right;
            height: 800px;
        }

        #main_div {
            width: 70%;
            background-color: white;
            float: left;
            margin-bottom: 50px;
            /*height: 215px;*/
        }

        #footer_div {
            width: 100%;
        }

        .header {
            margin-left: 15%;
            margin-right: 15%;
        }

        #header {
            height: 100px;
        }

        .navbar-custom {
            color: white;
            background-color: #5099C7;
        }

        .btn-link {
            color: #5099C7;
        }

        .glyphiconCustom {
            color: black;
            margin-top: 2%;
            float: right;
        }

        a:link {
            color:white; background-color:transparent; text-decoration:none
        }

        .dropdown {
            position: relative;
            display: inline-block;
        }

        .margin {
            background-color: white;
            margin-top: 10px;
            margin-left: 15%;
            margin-right: 15%;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #5099C7;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            padding: 12px 16px;
            z-index: 1;
        }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .dropbtn {
            background-color: #5099C7;
            color: white;
            padding: 16px;
            font-size: 16px;
            border: none;
            cursor: pointer;
        }

        .footer {
            background-color: #e8e8e8;
            margin-left: 15%;
            margin-right: 15%;
            margin-top: 50px;
        }

        .footer-info {
            /*float: left;*/
            margin-top: 5px;
            margin-left: 5px;
        }
    </style>
</head>
<body>
    <form id="form1" runat="server">
        <div>
            <div id="header" class="header">
                <img src="pictures/Logga/kontorsprylarABLogga.png" style="height: 100px" />

                    </div>
                </nav>
            </div>
            <div id="left_div">
                <asp:ContentPlaceHolder ID="Left_Holder" runat="server">
                </asp:ContentPlaceHolder>

            </div>
            <div id="main_div">
                <asp:ContentPlaceHolder ID="mainBody_Holder" runat="server">
                </asp:ContentPlaceHolder>
            </div>
            <div id="right_div">
                <asp:ContentPlaceHolder ID="Right_Holder" runat="server">
                </asp:ContentPlaceHolder>
            </div>
            <div class="margin">
